<!-- ATR-42-500 Flightdeck by Narendran M -->

<PropertyList>

 <path>Cockpit.ac</path>

<!-- Cockpit Illumination -->

	<animation>
		<name>Cockpit Illumination Select</name>
		<type>select</type>
		<object-name>object.lit</object-name>
		<condition>
			<property>controls/lighting/flood</property>
		</condition>
	</animation>

	<animation>
		<name>Cockpit illumination</name>
		<type>material</type>
		<object-name>object.lit</object-name>
		<emission>
			<red>0.13</red>
			<green>0.13</green>
			<blue>0.13</blue>
			<factor-prop>controls/lighting/flood</factor-prop>
		</emission>
	</animation>

<!-- Overhead Panel -->

	<model>
		<name>Overhead Panel</name>
		<path>Aircraft/ATR-42-500/Models/Flightdeck-600/OHpanel.xml</path>
        <offsets>
            <x-m>-0.023</x-m>
            <y-m>-2.145</y-m>
            <z-m>1.37</z-m>
            <pitch-deg>70</pitch-deg>
            <roll-deg>0</roll-deg>
