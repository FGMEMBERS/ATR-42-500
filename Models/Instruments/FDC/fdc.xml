<?xml version="1.0"?>
<PropertyList>

    <path>fdc.ac</path>

    <animation>
        <type>select</type>
        <object-name>AP-alt</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-alts</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>2</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-vs</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>3</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-ias</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/spd</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-dcs</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>4</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-climb</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/vnav</property>
                <value>5</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-wl</object-name>
        <condition>
            <and>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>0</value>
                </equals>
                <not>
                    <property>autopilot/locks/passive-mode</property>
                </not>
            </and>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-hdg</object-name>
        <condition>
            <equals>
                <property>instrumentation/flightdirector/lnav</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-nav</object-name>
        <condition>
            <or>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>2</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>3</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>6</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-apr</object-name>
        <condition>
            <or>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>4</value>
                </equals>
                <equals>
                    <property>instrumentation/flightdirector/lnav</property>
                    <value>5</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-bc</object-name>
        <condition>
            <property>instrumentation/nav/back-course-btn</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>AP-gs</object-name>
        <condition>
            <equals>
                <property>autopilot/locks/altitude</property>
                <value>GS</value>
            </equals>
        </condition>
    </animation>
<!-- Hotspots -->

    <animation>
        <type>pick</type>
        <object-name>HDG.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("hdg");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>NAV.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("nav");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>APPR.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("apr");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>BC.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("bc");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ALT.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("alt");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ALTS.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("asel");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>VS.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("vs");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>IAS.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("ias");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>DCS.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("dcs");</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>CLIMB.btn</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>systems.set_mode("climb");</script>
            </binding>
        </action>
    </animation>

</PropertyList>
