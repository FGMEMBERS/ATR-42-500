<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>light-panel.ac</path>

<!-- Flood Light Illumination -->
<animation>		
		<name>Flood Light illumination</name>
		<type>material</type>
		<object-name>APcontrol</object-name>
		<emission>
			<red>0.12</red>
			<green>0.12</green>
			<blue>0.12</blue>
			<factor-prop>controls/lighting/flood</factor-prop>
		</emission>
	</animation>

<!-- Light Switch Pick Animations -->

	<animation>
		<name>Land Left pick</name>
		<type>pick</type>
		<object-name>Land.Left.Btn</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/lighting/landing-lights[0]</property>
			</binding>
		</action>
	</animation>

