<?xml version="1.0"?>
<PropertyList>
  <name>Cabin Announcements</name>
  <layout>vbox</layout>

<!-- Reminder, included are: safety, emergency, descending, arrival, climbing, pretakeoff, music -->

  <text>
    <label>Cabin Announcements</label>
  </text>

  <hrule/>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>

    <text>
      <label>Check a box to sound a cabin announcement.</label>
    </text>

    <checkbox>
      <halign>left</halign>
      <label>Seatbelts Sign</label>
      <property>/controls/switches/seatbelt-sign</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/seatbelt-sign</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Boarding/Landing Music 1</label>
      <property>/controls/switches/music</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/music</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Merlion Official Boarding Music</label>
      <property>/controls/switches/music-merlion</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/music-merlion</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>CNA Official Boarding Music</label>
      <property>/controls/switches/music-cna</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/music-cna</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Between arrival and deplaning</label>
      <property>/controls/switches/music2</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/music2</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Pre-departure</label>
      <property>/controls/switches/pretakeoff</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/pretakeoff</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Safety Briefing</label>
      <property>/controls/switches/safety</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/safety</property>
      </binding>
    </checkbox>


    <checkbox>
      <halign>left</halign>
      <label>Take-off Captain</label>
      <property>/controls/switches/climbing</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/climbing</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Descending</label>
      <property>/controls/switches/descending</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/descending</property>
      </binding>
    </checkbox>

    <checkbox>
      <halign>left</halign>
      <label>Landing Captain</label>
      <property>/controls/switches/emergency</property>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/emergency</property>
      </binding>
    </checkbox>



  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <empty><stretch>true</stretch></empty>
  </group>

</PropertyList>
